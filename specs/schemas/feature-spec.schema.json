{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/feature-spec.schema.json",
  "title": "Feature Specification",
  "description": "Schema for defining feature specifications in spec-based development",
  "type": "object",
  "required": ["metadata", "description", "acceptance_criteria"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["id", "title", "version", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^FEAT-[0-9]{4}$",
          "description": "Unique feature identifier"
        },
        "title": {
          "type": "string",
          "minLength": 5,
          "maxLength": 100,
          "description": "Short, descriptive title"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of the specification"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "implemented", "deprecated"],
          "description": "Current status of the specification"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "default": "medium"
        },
        "author": {
          "type": "string",
          "description": "Author or team responsible"
        },
        "created_at": {
          "type": "string",
          "format": "date",
          "description": "Creation date (ISO 8601)"
        },
        "updated_at": {
          "type": "string",
          "format": "date",
          "description": "Last update date (ISO 8601)"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Categorization tags"
        }
      }
    },
    "description": {
      "type": "object",
      "required": ["summary", "problem_statement", "proposed_solution"],
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 20,
          "description": "Brief overview of the feature"
        },
        "problem_statement": {
          "type": "string",
          "description": "The problem this feature solves"
        },
        "proposed_solution": {
          "type": "string",
          "description": "High-level description of the solution"
        },
        "out_of_scope": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Explicitly excluded items"
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Other features or systems this depends on"
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "given", "when", "then"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^AC-[0-9]{3}$",
            "description": "Acceptance criteria identifier"
          },
          "given": {
            "type": "string",
            "description": "Initial context or precondition"
          },
          "when": {
            "type": "string",
            "description": "Action or trigger"
          },
          "then": {
            "type": "string",
            "description": "Expected outcome"
          },
          "and": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Additional conditions"
          }
        }
      }
    },
    "technical_requirements": {
      "type": "object",
      "properties": {
        "constraints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Technical constraints"
        },
        "performance": {
          "type": "object",
          "properties": {
            "response_time_ms": { "type": "integer" },
            "throughput": { "type": "string" },
            "availability": { "type": "string" }
          }
        },
        "security": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Security requirements"
        },
        "scalability": {
          "type": "string",
          "description": "Scalability expectations"
        }
      }
    },
    "api_changes": {
      "type": "object",
      "properties": {
        "new_endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
              "path": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "modified_endpoints": {
          "type": "array",
          "items": { "type": "string" }
        },
        "breaking_changes": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "ui_changes": {
      "type": "object",
      "properties": {
        "wireframes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Paths to wireframe files"
        },
        "components": {
          "type": "array",
          "items": { "type": "string" },
          "description": "UI components affected"
        }
      }
    },
    "testing_requirements": {
      "type": "object",
      "properties": {
        "unit_tests": { "type": "boolean", "default": true },
        "integration_tests": { "type": "boolean", "default": true },
        "e2e_tests": { "type": "boolean", "default": false },
        "performance_tests": { "type": "boolean", "default": false },
        "test_scenarios": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "rollout": {
      "type": "object",
      "properties": {
        "feature_flag": {
          "type": "string",
          "description": "Feature flag name if applicable"
        },
        "rollout_strategy": {
          "type": "string",
          "enum": ["immediate", "gradual", "canary", "beta"],
          "default": "immediate"
        },
        "rollback_plan": {
          "type": "string",
          "description": "How to rollback if issues arise"
        }
      }
    }
  }
}
